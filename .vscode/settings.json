{
    //"python.defaultInterpreterPath": "/Users/jkunz/.pyenv/shims/python"
    "python.defaultInterpreterPath": "${env:HOME}/Library/Caches/pypoetry/virtualenvs/paragraph-detective-xlV65Bdr-py3.9",
    "notebook.formatOnSave.enabled": true,
    "editor.formatOnSave": true,
    "notebook.cellToolbarVisibility": "hover",
    "search.experimental.notebookSearch": true,
    "jupyter.themeMatplotlibPlots": true,
    // linting
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": false,
    // formating
    "python.formatting.provider": "black",
    // pylance
    "python.languageServer": "Default",
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.fixAll": [
        "source.unusedImports",
        "source.convertImportFormat"
    ],
    "autoDocstring.docstringFormat": "pep257",
    "HuggingFaceCode.temperature": 0
}